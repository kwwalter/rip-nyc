<div id="home">
  <h3>Enter your name and age below</h3>
  <h4>...if you dare!</h4>
  <form action="/userinfo" method="post">
    <input type="text" name="user[name]" placeholder="Your first name">
    <input type="number" name="user[age]" placeholder="Your current age">
    <select name="user[gender]">
      <option value="female">female</option>
      <option value="male">male</option>
      <option value="other">other</option>
    </select>
    <input type="submit" value="Give me the bad news">
  </form>
  <img src="https://media.giphy.com/media/TGHXd9J6mK6sM/giphy.gif" />
</div>
